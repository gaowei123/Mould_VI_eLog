                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </ImageBrush.RelativeTransform>
                                </ImageBrush>
                            </Button.Background>
                        </Button>
                        <Button x:Name="btnSave" Content="" HorizontalAlignment="Right" Width="30" Margin="0,0,0,0" Click="btnSave_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="/VI_eLog;component/Resources/save.png" Stretch="Uniform"/>
                            </Button.Background>
                        </Button>

                    </StackPanel>

                </StackPanel>

